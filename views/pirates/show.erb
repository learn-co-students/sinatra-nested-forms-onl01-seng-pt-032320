<h1>Pirate</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %> pounds</h4>
  <h5>Height: <%=@pirate.height %> inches</h5>
</div><br>

<h1>Ships</h1>
<% @ships.each_with_index do |ship, index| %>
  <div class="ship">
    <h2>Ship <%= index + 1 %></h2>
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
